@if (User.Identity.IsAuthenticated)
{
    <div class="input-group mb-2">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                </svg>
            </div>
        </div>
        <input class="form-control" id="pesquisarTabela" type="text" style="background-color: ghostwhite" placeholder="Pesquisar na tabela">
    </div>
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="align-middle">Id</th>
                <th scope="col" class="align-middle">Prazo de Entrega</th>
                <th scope="col" class="align-middle">Vencimento</th>
                <th scope="col" class="align-middle">Atividade </th>
                <th scope="col" class="align-middle">Responsável </th>
                <th scope="col" class="align-middle">E-mail do Responsável</th>
                <th scope="col" class="align-middle">Qt Cond</th>
                <th scope="col" class="align-middle">Status</th>
                <th scope="col" class="align-middle"></th>
            </tr>
        </thead>
        <tbody id="tabelaAtividades">
            @foreach (var atividade in Model)
            {
                <tr>
                    <td>@atividade.Id</td>
                    <td>@atividade.PrazoDeEntrega</td>
                    <td>@atividade.Vencimento</td>
                    <td>@atividade.Nome</td>
                    <td>@atividade.CargoDoResponsavel</td>
                    <td id="colResponsavel">@atividade.EmailDoResponsavel</td>
                    <td>@atividade.QtCond</td>
                    <td class="text-center">
                        @if (atividade.Status == "No prazo")
                        { //#009900
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#aaff80" class="bi bi-square-fill" viewBox="0 0 16 16">
                            <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2z" />
                            </svg>
                        }
                        else if (atividade.Status == "Vencendo")
                        { //#ffff00
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffff80" class="bi bi-square-fill" viewBox="0 0 16 16">
                                <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2z" />
                            </svg>
                        }
                        else
                        { //#ff1919
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ff8080" class="bi bi-square-fill" viewBox="0 0 16 16">
                                <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2z" />
                            </svg>
                        }
                    </td>
                    <td>
                        <form asp-controller="Home" asp-action="editAtividade" method="post">
                            <input type="hidden" name="id" value="@atividade.Id">
                            <button type="submit" class="btn btn-sm" id="encerrarAtvBtn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>
                            </button>
                        </form>
                        <form asp-controller="AtividadeDP" asp-action="EncerrarAtividadeDP" method="post" onsubmit="return confirm('Deseja encerrar esta atividade?');">
                            <input type="hidden" name="id" value="@atividade.Id">
                            <button type="submit" class="btn btn-sm" id="encerrarAtvBtn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square-fill"
                                     viewBox="0 0 16 16">
                                    <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0
                                                    0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093
                                                    3.473-4.425a.75.75 0 0 1 1.08-.022z" />
                                </svg>
                            </button>
                        </form>
                        <form asp-controller="AtividadeDP" asp-action="DeletarAtividadeDP" method="post" onsubmit="return confirm('Deseja deletar esta atividade?');">
                            <input type="hidden" name="id" value="@atividade.Id">
                            <button type="submit" class="btn btn-sm" id="delAtvBtn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                </svg>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="modal" tabindex="-1" role="dialog" id="encerrarAtivModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Encerrar atividade</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Tem certeza de que deseja encerrar esta atividade?</p>
            </div>
            <div class="modal-footer">
                <button id="btnEncerrarModalSim" type="button" class="btn btn-success" onclick="location.href='@Url.Action("EncerrarAtividade", "Home")?id=idAtividadeSelecionada.ToString()'">Sim</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Não</button>
            </div>
        </div>
    </div>
</div>

