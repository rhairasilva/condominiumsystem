<script>
    $(document).ready(function () {
        $("#pesquisarTabela").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#tabelaAtividades tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>