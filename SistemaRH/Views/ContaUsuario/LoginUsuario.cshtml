@{
    ViewData["Title"] = "Login";

}
@if (!User.Identity.IsAuthenticated)
{
    <div class="text-center">
        <h1 class="display-4">Bem-vindo!</h1>
        <br></br>
    </div>
    <form asp-controller="ContaUsuario" asp-action="FazerLoginUsuario" method="post">
        <div class="form-group row h-100 justify-content-center align-items-center">
            <label for="inputNomeDeUsuario" class="col-sm-2 col-form-label">Nome de Usuário</label>
            <div class="col-md-4 col-md-offset-4 col-xs-4">
                <input type="text" class="form-control" id="inputNomeDeUsuario" name="nomeDeUsuario" placeholder="Nome de usuário">
            </div>
        </div>
        <div class="form-group row h-100 justify-content-center align-items-center">
            <label for="inputSenha" class="col-sm-2 col-form-label">Senha</label>
            <div class="col-md-4 col-md-offset-4 col-xs-4">
                <input type="password" class="form-control" id="inputSenha" name="senha" placeholder="Senha">
            </div>
        </div>
        @if (Model.Mensagem != "Sem erro")
        {
            <div class="form-group row h-100 justify-content-center align-items-center">
                <div class="col-md-6 col-md-offset-6 col-sm-15">
                    <p class="text-danger">@Model.Mensagem</p>
                </div>
            </div>
        }
        <div class="form-group row h-100 justify-content-end align-items-end">
            <div class="col-md-4 col-md-offset-4 col-sm-10">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
        </div>
    </form>
}
